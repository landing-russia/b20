---
import { Image } from "@astrojs/image/components"

const items = [
  { path: "/", name: "Home" },
  { path: "/blog", name: "Blog" },
  { path: "/about", name: "About" },
  { path: "/products", name: "Products" },
]
---

<nav>
  <div>
    <a href="/"><strong>LOGO</strong></a>
  </div>
  <ul>
    {
      items.map((item) => (
        <li>
          <a href={item.path}>{item.name}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    display: flex;
    align-items: center;
  }
  ul {
    display: flex;
    align-items: center;
    gap: 20px;
    list-style: none;
    margin-left: auto;
    margin-right: 20px;
  }
  .logo {
    display: flex;
    align-items: center;
  }

  a {
    text-decoration: none;
    color: #333;
  }
</style>
