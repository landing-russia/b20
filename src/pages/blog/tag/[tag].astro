---
import { getCollection, CollectionEntry } from "astro:content"
import Base from "@layouts/Base.astro"
import PostCard from "@components/PostCard.astro"
import { formatBlogPosts } from "@utils"

export async function getStaticPaths() {
  const allPosts = await getCollection("blog")
  const formattedPosts: CollectionEntry<"blog">[] = formatBlogPosts(allPosts)
  const uniqueTags = [...new Set(formattedPosts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = formattedPosts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { posts } = Astro.props
const { tag } = Astro.params
---

<Base title={tag}>
  <h1>{tag}</h1>
  <div>
    {posts.map((post) => <PostCard data={post.data} url={post.slug} />)}
  </div>
</Base>

<style>
  h1 {
    text-transform: uppercase;
  }
</style>
