---
import Base from "@layouts/Base.astro"
---

<Base>
  <h1>Home</h1>
  <div class="relative flex min-h-screen flex-col justify-center overflow-hidden bg-gray-50 py-6 sm:py-12">
    <img src="/img/beams.jpg" alt="" class="absolute top-1/2 left-1/2 max-w-none -translate-x-1/2 -translate-y-1/2" width="1308" />
    <div class="absolute inset-0 bg-[url(/img/grid.svg)] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
    <div class="relative w-full bg-white px-6 pt-10 pb-8 shadow-xl ring-1 ring-gray-900/5 sm:mx-auto sm:max-w-lg sm:rounded-lg sm:px-10">
      <div class="mx-auto max-w-xl">
        <nav class="relative z-0 flex justify-around">
          <button class="peer/home flex-1">Home</button>
          <button class="peer/about flex-1">About</button>
          <button class="peer/services flex-1">Services</button>
          <button class="peer/blog flex-1">Blog</button>
          <button class="peer/contact flex-1">Contact</button>
  
          <span class="absolute left-0 -z-10 h-full w-1/5 origin-center scale-x-110 scale-y-125 rounded-full bg-gray-100 transition-all duration-300 peer-focus/about:left-[20%] peer-focus/services:left-[40%] peer-focus/blog:left-[60%] peer-focus/contact:left-[80%]"></span>
        </nav>
      </div>
    </div>
  </div>
</Base>
